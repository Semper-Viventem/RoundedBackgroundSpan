<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/drawSpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Draw span" />

        <TextView
            android:id="@+id/spanText"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="It's my very-very long testing text!\nLine2\nAnd mostly long line 3\nAnd new line\nAnd new line" />
    </LinearLayout>

    <EditText
        android:id="@+id/spanEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Spannable text"
        android:padding="10dp"
        android:textSize="32dp" />

</LinearLayout>
